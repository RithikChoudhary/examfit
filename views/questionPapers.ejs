    <script src="https://kit.fontawesome.com/YOUR-KIT-ID.js" crossorigin="anonymous"></script>

    <script>
      function scrollSectionCarousel(sectionName, direction) {
        const carouselId = 'carousel-' + sectionName.replace(/\s+/g, '-');
        const carousel = document.getElementById(carouselId);
        const card = carousel.querySelector('.paper-card');
        if (!card) return;
    
        const cardStyle = getComputedStyle(card);
        const cardWidth = card.offsetWidth 
                        + parseInt(cardStyle.marginLeft || 0) 
                        + parseInt(cardStyle.marginRight || 0)
                        + 20; // match your .carousel gap in px
    
        carousel.scrollBy({
          left: direction * cardWidth,
          behavior: 'smooth'
        });
      }
    </script>
    

    
    
